# Copy this file to .env and fill in your values

# Google Gemini API Key (required for AI Assistant feature)
# Get your key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ========= AUTHENTICATION (SECURE) =========
# Authentication Credentials (User 1)
AUTH_USER1_USERNAME=admin
# Plain password (less secure, for testing only)
AUTH_USER1_PASSWORD=admin123
# Bcrypt hashed password (RECOMMENDED - generate with: python -c "from passlib.context import CryptContext; print(CryptContext(schemes=['bcrypt']).hash('your_password'))")
AUTH_USER1_PASSWORD_HASH=$2b$12$examplehashhere123456789012345678901234567890

# Authentication Credentials (User 2)
AUTH_USER2_USERNAME=validator
AUTH_USER2_PASSWORD=valid123
AUTH_USER2_PASSWORD_HASH=$2b$12$examplehashhere123456789012345678901234567890

# JWT Secret Key (use a strong random string in production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=nyx-data-validator-secret-key-2024

# ========= SECURITY NOTES =========
# 1. Use PASSWORD_HASH instead of PASSWORD for production
# 2. Generate a strong random JWT_SECRET_KEY for production
# 3. Never commit .env to version control
